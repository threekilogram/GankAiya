<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

      <TextView
          android:id="@+id/desc"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:ellipsize="end"
          android:maxLines="2"
          android:text="仿美团、淘宝、QQ、微博、腾讯、网易、今日头条等标题滚动视图。"
          android:textSize="16sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>

      <pl.droidsonroids.gif.GifImageView
          android:id="@+id/gif00"
          android:layout_width="0dp"
          android:layout_height="110dp"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:scaleType="centerInside"
          android:src="@drawable/a42"
          app:layout_constraintEnd_toStartOf="@+id/gif01"
          app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/desc"/>

      <pl.droidsonroids.gif.GifImageView
          android:id="@+id/gif02"
          android:layout_width="0dp"
          android:layout_height="110dp"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:scaleType="centerInside"
          android:src="@drawable/a42"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintStart_toEndOf="@+id/gif01"
          app:layout_constraintTop_toBottomOf="@+id/desc"/>

      <pl.droidsonroids.gif.GifImageView
          android:id="@+id/gif01"
          android:layout_width="0dp"
          android:layout_height="110dp"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:scaleType="centerInside"
          android:src="@drawable/a42"
          app:layout_constraintEnd_toStartOf="@+id/gif02"
          app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintStart_toEndOf="@+id/gif00"
          app:layout_constraintTop_toBottomOf="@+id/desc"/>
      <TextView
          android:id="@+id/date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="8dp"
          android:text="2017-04-14 12:50:10"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/gif02"/>
      <TextView
          android:id="@+id/who"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="8dp"
          android:text="mingtian"
          app:layout_constraintEnd_toStartOf="@+id/date"
          app:layout_constraintTop_toBottomOf="@+id/gif01"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="8dp"
          android:background="@color/lightGray"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/who"/>

</android.support.constraint.ConstraintLayout>